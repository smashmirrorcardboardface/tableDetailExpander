{
    "dataRoles": [
        {
            "displayName": "Summary Row fields",
            "name": "summaryRowColumn",
            "kind": "GroupingOrMeasure"
        },
        {
            "displayName": "Detail Row HTML",
            "name": "detailHTML",
            "kind": "GroupingOrMeasure"
        }
    ],
    "objects": {
        "dataPoint": {
            "displayName": "Data colors",
            "properties": {
                "defaultColor": {
                    "displayName": "Default color",
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                },
                "showAllDataPoints": {
                    "displayName": "Show all",
                    "type": {
                        "bool": true
                    }
                },
                "fill": {
                    "displayName": "Fill",
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                },
                "fillRule": {
                    "displayName": "Color saturation",
                    "type": {
                        "fill": {}
                    }
                },
                "fontSize": {
                    "displayName": "Text Size",
                    "type": {
                        "formatting": {
                            "fontSize": true
                        }
                    }
                }
            }
        }
    },
    "dataViewMappings": [
        {
            "conditions": [
                {
                    "detailHTML": {
                        "max": 1
                    }
                }
            ],
            "categorical": {
                "categories": {
                    "select": [
                        {
                            "for": {
                                "in": "summaryRowColumn"
                            }
                        },
                        {
                            "for": {
                                "in": "detailHTML"
                            }
                        }
                    ]
                }
            }
        }
    ]
}